<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonghui.portal.mapper.businessman.BusinessmanActicleGradeMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="businessmanActicleGradeMap" type="com.yonghui.portal.model.businessman.BusinessmanActicleGrade">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="acticleId" column="acticle_id"/>
        <result property="acticleTitle" column="acticle_title"/>
        <result property="grade" column="grade"/>
        <result property="remark" column="REMARK"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
        <result property="disabled" column="DISABLED"/>
        <result property="version" column="VERSION"/>
    </resultMap>

	<select id="queryObject" resultType="com.yonghui.portal.model.businessman.BusinessmanActicleGrade">
        select g.*,a.title as acticle_title,u.`name` as user_name from platform.businessman_acticle_grade g
        left join platform.businessman_acticle a on a.id = g.acticle_id
        left join platform.user_forfront u on u.id = g.user_id
        where g.id =  #{value}
	</select>

	<select id="queryList" resultType="com.yonghui.portal.model.businessman.BusinessmanActicleGrade">
        select g.*,a.title as acticle_title,u.`name` as user_name from platform.businessman_acticle_grade g
        left join platform.businessman_acticle a on a.id = g.acticle_id
        left join platform.user_forfront u on u.id = g.user_id
        <where>
            <if test="id != null and id !=''">
                and g.id like concat('%',#{id},'%')
            </if>
            <if test="acticleId != null and acticleId !=''">
                and g.acticle_id like concat('%',#{acticleId},'%')
            </if>
            <if test="userId != null and userId !=''">
                and g.user_id like concat('%',#{userId},'%')
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by g.${sidx} ${order}
            </when>
			<otherwise>
                order by g.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from platform.businessman_acticle_grade
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
            <if test="remark != null and remark !=''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
	</select>

    <insert id="save" parameterType="com.yonghui.portal.model.businessman.BusinessmanActicleGrade" useGeneratedKeys="true" keyProperty="id">
		insert into platform.businessman_acticle_grade
		(
			`user_id`, 
			`acticle_id`, 
			`grade`, 
			`REMARK`, 
			`CREATER`, 
			`CREATE_TIME`, 
			`MODIFIER`, 
			`MODIFY_TIME`, 
			`DISABLED`, 
			`VERSION`
		)
		values
		(
			#{userId}, 
			#{acticleId}, 
			#{grade}, 
			#{remark}, 
			#{creater}, 
			#{createTime}, 
			#{modifier}, 
			NOW(), 
			#{disabled}, 
			#{version}
		)
	</insert>

    <update id="update" parameterType="com.yonghui.portal.model.businessman.BusinessmanActicleGrade">
        update platform.businessman_acticle_grade
        <set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="acticleId != null">`acticle_id` = #{acticleId}, </if>
			<if test="grade != null">`grade` = #{grade}, </if>
			<if test="remark != null">`REMARK` = #{remark}, </if>
			<if test="creater != null">`CREATER` = #{creater}, </if>
			<if test="createTime != null">`CREATE_TIME` = #{createTime}, </if>
			<if test="modifier != null">`MODIFIER` = #{modifier}, </if>
			`MODIFY_TIME` = NOW(), 
			<if test="disabled != null">`DISABLED` = #{disabled}, </if>
			<if test="version != null">`VERSION` = #{version}</if>
        </set>
        where id = #{id}
    </update>
	
	<delete id="delete">
		delete from platform.businessman_acticle_grade where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from platform.businessman_acticle_grade where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

    <select id="getListByActicleId" parameterType="Integer" resultType="com.yonghui.portal.model.businessman.BusinessmanActicleGrade">
         select g.*,a.title as acticle_title,u.`name` as user_name from platform.businessman_acticle_grade g
        left join platform.businessman_acticle a on a.id = g.acticle_id
        left join platform.user_forfront u on u.id = g.user_id WHERE g.acticle_id = #{id}
    </select>
</mapper>