<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonghui.portal.mapper.businessman.BusinessmanSubjectInfoMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="businessmanSubjectInfoMap" type="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo">
        <result property="id" column="id"/>
        <result property="pid" column="pid"/>
        <result property="name" column="name"/>
        <result property="position" column="position"/>
        <result property="remark" column="REMARK"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
        <result property="disabled" column="DISABLED"/>
        <result property="version" column="VERSION"/>
    </resultMap>

	<select id="queryObject" resultType="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo">
		select * from platform.businessman_subject_info where id = #{value}
	</select>

	<select id="queryList" resultType="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo">
		select m.*,(select p.name from platform.businessman_subject_info p where p.id = m.pid) as pname from platform.businessman_subject_info m
        <where>
            <if test="id != null and id !=''">
                and m.id like concat('%',#{id},'%')
            </if>
            <if test="remark != null and remark !=''">
                and m.remark like concat('%',#{remark},'%')
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by m.${sidx} ${order}
            </when>
			<otherwise>
                order by m.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from platform.businessman_subject_info
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
            <if test="remark != null and remark !=''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
	</select>

    <insert id="save" parameterType="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo" useGeneratedKeys="true" keyProperty="id">
		insert into platform.businessman_subject_info
		(
			`pid`, 
			`name`, 
			`position`, 
			`REMARK`, 
			`CREATER`, 
			`CREATE_TIME`, 
			`MODIFIER`, 
			`MODIFY_TIME`, 
			`DISABLED`, 
			`VERSION`
		)
		values
		(
			#{pid}, 
			#{name}, 
			#{position}, 
			#{remark}, 
			#{creater}, 
			NOW(),
			#{modifier}, 
			NOW(), 
			#{disabled}, 
			#{version}
		)
	</insert>

    <update id="update" parameterType="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo">
        update platform.businessman_subject_info
        <set>
			<if test="pid != null">`pid` = #{pid}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="position != null">`position` = #{position}, </if>
			<if test="remark != null">`REMARK` = #{remark}, </if>
			<if test="modifier != null">`MODIFIER` = #{modifier}, </if>
			`MODIFY_TIME` = NOW(), 
			<if test="disabled != null">`DISABLED` = #{disabled}, </if>
			<if test="version != null">`VERSION` = #{version}</if>
        </set>
        where id = #{id}
    </update>
	
	<delete id="delete">
		delete from platform.businessman_subject_info where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from platform.businessman_subject_info where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

    <select id="acticleSubjectSelected" resultType="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo">
       select m.*,(select p.name from platform.businessman_subject_info p where p.id = m.pid) as pname from platform.businessman_subject_info m
       order  by m.position asc ;
    </select>

    <select id="getActicleSubjectSelected" resultType="com.yonghui.portal.model.businessman.BusinessmanSubjectInfo">
        select m.*,(select p.name from platform.businessman_subject_info p where p.id = m.pid) as pname from platform.businessman_subject_info m
        where m.pid != 0
        order  by m.position asc ;
    </select>

</mapper>