<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonghui.portal.mapper.report.ReportModulePageMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="reportModulePageMap" type="com.yonghui.portal.model.report.ReportModulePage">
        <result property="id" column="id"/>
        <result property="pageType" column="page_type"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="designStructrue" column="design_structrue"/>
        <result property="onlineStructrue" column="online_structrue"/>
        <result property="status" column="status"/>
        <result property="remark" column="REMARK"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
        <result property="disabled" column="DISABLED"/>
        <result property="version" column="VERSION"/>
    </resultMap>

    <select id="queryObject" resultType="com.yonghui.portal.model.report.ReportModulePage">
		select * from report_module_page where id = #{value}
	</select>

    <select id="queryList" resultType="com.yonghui.portal.model.report.ReportModulePage">
        select * from report_module_page
        <where>
            <if test="id != null and id !=''">
                and id like concat('%',#{id},'%')
            </if>
            <if test="remark != null and remark !=''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from report_module_page
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
            <if test="remark != null and remark !=''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
    </select>

    <insert id="save" parameterType="com.yonghui.portal.model.report.ReportModulePage" useGeneratedKeys="true"
            keyProperty="id">
		insert into report_module_page
		(
			`page_type`, 
			`title`, 
			`content`, 
			`design_structrue`, 
			`online_structrue`, 
			`status`, 
			`REMARK`, 
			`CREATER`, 
			`CREATE_TIME`, 
			`MODIFIER`, 
			`MODIFY_TIME`, 
			`DISABLED`, 
			`VERSION`
		)
		values
		(
			#{pageType}, 
			#{title}, 
			#{content}, 
			#{designStructrue}, 
			#{onlineStructrue}, 
			#{status}, 
			#{remark}, 
			#{creater}, 
			#{createTime}, 
			#{modifier}, 
			NOW(), 
			#{disabled}, 
			#{version}
		)
	</insert>

    <update id="update" parameterType="com.yonghui.portal.model.report.ReportModulePage">
        update report_module_page
        <set>
            <if test="pageType != null">`page_type` = #{pageType},</if>
            <if test="title != null">`title` = #{title},</if>
            <if test="content != null">`content` = #{content},</if>
            <if test="designStructrue != null">`design_structrue` = #{designStructrue},</if>
            <if test="onlineStructrue != null and status ==2 ">`online_structrue` = #{onlineStructrue},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="remark != null">`REMARK` = #{remark},</if>
            <if test="creater != null">`CREATER` = #{creater},</if>
            <if test="createTime != null">`CREATE_TIME` = #{createTime},</if>
            <if test="modifier != null">`MODIFIER` = #{modifier},</if>
            `MODIFY_TIME` = NOW(),
            <if test="disabled != null">`DISABLED` = #{disabled},</if>
            <if test="version != null">`VERSION` = #{version}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from report_module_page where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from report_module_page where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>