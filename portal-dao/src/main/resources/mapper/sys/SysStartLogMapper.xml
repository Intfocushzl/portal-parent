<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonghui.portal.mapper.sys.SysStartLogMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="sysStartLogMap" type="com.yonghui.portal.model.sys.SysStartLog">
        <result property="id" column="ID"/>
        <result property="ip" column="IP"/>
        <result property="userName" column="User_Name"/>
        <result property="hostName" column="Host_Name"/>
        <result property="computerName" column="Computer_Name"/>
        <result property="userDomain" column="User_Domain"/>
        <result property="remark" column="REMARK"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
        <result property="disabled" column="DISABLED"/>
        <result property="version" column="VERSION"/>
    </resultMap>

    <select id="queryObject" resultType="com.yonghui.portal.model.sys.SysStartLog">
		select * from sys_start_log where ID = #{value}
	</select>

    <select id="queryList" resultType="com.yonghui.portal.model.sys.SysStartLog">
        select * from sys_start_log
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
            <if test="remark != null and remark !=''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by ID desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from sys_start_log
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
            <if test="remark != null and remark !=''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
    </select>

    <insert id="save" parameterType="com.yonghui.portal.model.sys.SysStartLog" useGeneratedKeys="true" keyProperty="id">
		insert into sys_start_log
		(
			`IP`, 
			`User_Name`, 
			`Host_Name`, 
			`Computer_Name`, 
			`User_Domain`, 
			`REMARK`, 
			`CREATER`, 
			`CREATE_TIME`, 
			`MODIFIER`, 
			`MODIFY_TIME`, 
			`DISABLED`, 
			`VERSION`
		)
		values
		(
			#{ip}, 
			#{userName}, 
			#{hostName}, 
			#{computerName}, 
			#{userDomain}, 
			#{remark}, 
			#{creater}, 
			#{createTime}, 
			#{modifier}, 
			NOW(), 
			#{disabled}, 
			#{version}
		)
	</insert>

    <update id="update" parameterType="com.yonghui.portal.model.sys.SysStartLog">
        update sys_start_log
        <set>
            <if test="ip != null">`IP` = #{ip},</if>
            <if test="userName != null">`User_Name` = #{userName},</if>
            <if test="hostName != null">`Host_Name` = #{hostName},</if>
            <if test="computerName != null">`Computer_Name` = #{computerName},</if>
            <if test="userDomain != null">`User_Domain` = #{userDomain},</if>
            <if test="remark != null">`REMARK` = #{remark},</if>
            <if test="creater != null">`CREATER` = #{creater},</if>
            <if test="createTime != null">`CREATE_TIME` = #{createTime},</if>
            <if test="modifier != null">`MODIFIER` = #{modifier},</if>
            `MODIFY_TIME` = NOW(),
            <if test="disabled != null">`DISABLED` = #{disabled},</if>
            <if test="version != null">`VERSION` = #{version}</if>
        </set>
        where ID = #{id}
    </update>

    <delete id="delete">
		delete from sys_start_log where ID = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from sys_start_log where ID in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteJobLastTrriger">
		delete from QRTZ_SIMPLE_TRIGGERS;
		delete from QRTZ_TRIGGERS where trigger_name not like 'TASK_%';
		delete from QRTZ_SCHEDULER_STATE;
		delete from QRTZ_LOCKS;
	</delete>

</mapper>