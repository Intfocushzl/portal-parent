<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonghui.portal.mapper.SysGeneratorMapper">

    <select id="queryObject" resultType="com.yonghui.portal.model.SysGenerator">
		select * from sys_generator where id = #{value}
	</select>

    <select id="queryList" resultType="map">
        select table_name tableName, engine, table_comment tableComment, create_time createTime from
        information_schema.tables
        where table_schema = (select database())
        <if test="tableName != null and tableName.trim() != ''">
            and table_name like concat('%', #{tableName}, '%')
        </if>
        order by create_time desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from information_schema.tables where table_schema = (select database())
        <if test="tableName != null and tableName.trim() != ''">
            and table_name like concat('%', #{tableName}, '%')
        </if>
    </select>

    <select id="queryTable" resultType="map">
		select table_name tableName, engine, table_comment tableComment, create_time createTime from information_schema.tables 
			where table_schema = (select database()) and table_name = #{tableName}
	</select>

    <select id="queryColumns" resultType="map">
		select column_name columnName, data_type dataType, column_comment columnComment, column_key columnKey, extra from information_schema.columns
 			where table_name = #{tableName} and table_schema = (select database()) order by ordinal_position
	</select>

    <insert id="save" parameterType="com.yonghui.portal.model.SysGenerator" useGeneratedKeys="true" keyProperty="id">
        insert into sys_generator
        (
        `syspackage`,
        `author`,
        `email`,
        `tablePrefix`,
        `REMARK`,
        `CREATER`,
        `CREATE_TIME`,
        `MODIFIER`,
        `MODIFY_TIME`,
        `DISABLED`,
        `VERSION`
        )
        values
        (
        #{syspackage},
        #{author},
        #{email},
        #{tableprefix},
        #{remark},
        #{creater},
        #{createTime},
        #{modifier},
        NOW(),
        #{disabled},
        #{version}
        )
    </insert>

    <update id="update" parameterType="com.yonghui.portal.model.SysGenerator">
        update sys_generator
        <set>
            <if test="syspackage != null and syspackage != ''">`syspackage` = #{syspackage},</if>
            <if test="author != null and author != ''">`author` = #{author},</if>
            <if test="email != null and email != ''">`email` = #{email},</if>
            <if test="tableprefix != null and tableprefix != ''">`tablePrefix` = #{tableprefix},</if>
            <if test="remark != null and remark != ''">`REMARK` = #{remark},</if>
        </set>
        where id = #{id}
    </update>
</mapper>